#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/rgb.h>

#define HYPER LC(LS(LG(LALT)))

// layers
#define DEFAULT 0
#define SYMBOLIC 1
#define NUMBER 2
#define MAGIC 3
#define FACTORY_TEST 4

/ {
    behaviors {
        magic: magic_hold_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "MAGIC_HOLD_TAP";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&rgb_ug_status_macro>;
        };
    };

    macros {
        rgb_ug_status_macro: rgb_ug_status_macro_0 {
            label = "RGB_UG_STATUS";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&rgb_ug RGB_STATUS>;
        };

        bt_0: bt_profile_macro_0 {
            label = "BT_0";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&out OUT_BLE>,
                  <&bt BT_SEL 0>;
        };

        bt_1: bt_profile_macro_1 {
            label = "BT_1";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&out OUT_BLE>,
                  <&bt BT_SEL 1>;
        };

        bt_2: bt_profile_macro_2 {
            label = "BT_2";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&out OUT_BLE>,
                  <&bt BT_SEL 2>;
        };

        bt_3: bt_profile_macro_3 {
            label = "BT_3";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&out OUT_BLE>,
                  <&bt BT_SEL 3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        // demo layer
        // demo_layer {
        //     bindings = <
        //     &none  &none &none &none &none                                                       &none &none &none &none &none
        //     &none  &none &none &none &none &none                                           &none &none &none &none &none &none
        //     &none  &none &none &none &none &none                                           &none &none &none &none &none &none
        //     &none  &none &none &none &none &none                                           &none &none &none &none &none &none
        //     &none  &none &none &none &none &none &trans &trans &trans &trans &trans &trans &none &none &none &none &none &none
        //     &trans &none &none &none &none       &trans &trans &trans &trans &trans &trans       &none &none &none &none &none
        //     >;
        // };

        default_layer {
            bindings = <
            &kp F1         &kp F2   &kp F3      &kp F4      &kp F5                                                                                           &kp F6  &kp F7           &kp F8           &kp F9 &kp F10
            &none          &kp N1   &kp N2      &kp N3      &kp N4      &kp N5                                                                       &kp N6  &kp N7  &kp SINGLE_QUOTE &kp DOUBLE_QUOTES &kp N0 &none
            &kp ESC        &kp Q    &kp W       &kp E       &kp R       &kp T                                                                        &kp Y   &kp U   &kp I            &kp O            &kp P          &none
            &kp TAB        &kp A    &kp S       &kp D       &kp F       &kp G                                                                        &kp H   &kp J   &kp K            &kp L            &kp UNDERSCORE &none
            &none          &kp Z    &kp X       &kp C       &kp V       &none   &kp LALT    &none     &none  &none     &none      &kp LGUI           &none   &kp M   &kp COMMA        &kp DOT          &kp FSLH       &none
            &magic MAGIC 0 &none    &none       &none       &kp B               &kp LSHFT   &kp LCTRL &none  &kp LGUI  &mo NUMBER &lt SYMBOLIC SPACE         &kp N   &none            &kp LBKT         &kp RBKT       &none
            >;
        };

        symbolic_layer {
            bindings = <
            &none  &none &none            &none             &none                                                                                                  &none  &none      &none    &none      &none
            &none  &none &kp LEFT_BRACE   &kp RIGHT_BRACE   &none &none                                                                               &none        &none  &AMPERSAND &GRAVE   &none      &none
            &none  &PIPE &kp LEFT_BRACKET &kp RIGHT_BRACKET &none &none                                                                               &none        &POUND &DOLLAR    &PERCENT &CARROT    &none
            &none  &BSLH &kp LPAR         &kp RPAR          &kp BACKSPACE &none                                                                       &EXCLAMATION &COLON &SEMICOLON &EQUAL   &AT_SIGN   &none
            &none  &none &none            &none             &ks Enter     &none &trans      &trans      &to DEFAULT &trans      &trans      &trans    &none        &FSLH  &STAR      &MINUS   &PLUS      &none
            &trans &none &none            &none             &none               &trans      &trans      &trans      &trans      &trans      &trans                 &TILDE &none      &none    &none      &none
            >;
        };

        number_layer {
            bindings = <
            &none  &none &none &none &none                                                       &none &none &none &none &none
            &none  &none &none &none &none &none                                           &none &N7 &N8 &N9 &none &none
            &none  &none &none &none &none &none                                           &none &N4 &N5 &N6 &none &none
            &none  &none &none &none &none &none                                           &none &N1 &N2 &N3 &none &none
            &none  &none &none &none &none &none &trans &trans &trans &trans &trans &trans &none &N0   &none &none &none &none
            &trans &none &none &none &none       &trans &trans &trans &trans &trans &trans       &none &none &none &none &none
            >;
        };

        magic_layer {
            bindings = <
            &bt BT_CLR        &none               &none           &none           &none                                                                                                           &none      &none      &none      &none      &bt BT_CLR_ALL
            &none             &none               &none           &none           &none           &none                                                                                &none      &none      &none      &none      &none      &none
            &none             &rgb_ug RGB_SPI     &rgb_ug RGB_SAI &rgb_ug RGB_HUI &rgb_ug RGB_BRI &rgb_ug RGB_TOG                                                                      &none      &none      &none      &none      &none      &none
            &bootloader       &rgb_ug RGB_SPD     &rgb_ug RGB_SAD &rgb_ug RGB_HUD &rgb_ug RGB_BRD &rgb_ug RGB_EFF                                                                      &none      &none      &none      &none      &none      &bootloader
            &sys_reset        &none               &none           &none           &none           &none           &bt_2     &bt_3     &none            &none     &none     &none       &none      &none      &none      &none      &none      &sys_reset
            &none             &none               &none           &none           &none                           &bt_0     &bt_1     &out OUT_USB     &none     &none     &none                  &none      &none      &none      &none      &to FACTORY_TEST
            >;
        };

        factory_test_layer {
            bindings = <
            &kp N0   &kp N6   &kp N2   &kp N8   &kp N4                                                                              &kp N4   &kp N8   &kp N2   &kp N6   &kp N0
            &kp N1   &kp N7   &kp N3   &kp N9   &kp N5   &kp N0                                                            &kp N0   &kp N5   &kp N9   &kp N3   &kp N7   &kp N1
            &kp N2   &kp N8   &kp N4   &kp N0   &kp N6   &kp N1                                                            &kp N1   &kp N6   &kp N0   &kp N4   &kp N8   &kp N2
            &kp N3   &kp N9   &kp N5   &kp N1   &kp N7   &kp N2                                                            &kp N2   &kp N7   &kp N1   &kp N5   &kp N9   &kp N3
            &kp N4   &kp N0   &kp N6   &kp N2   &kp N8   &kp N3   &kp N4   &kp N5   &kp N6      &kp N6   &kp N5   &kp N4   &kp N3   &kp N8   &kp N2   &kp N6   &kp N0   &kp N4
            &kp N5   &kp N1   &kp N7   &kp N3   &kp N9            &kp N7   &kp N8   &kp N9      &kp N9   &kp N8   &kp N7            &kp N9   &kp N3   &kp N7   &kp N1   &kp N5
            >;
        };
    };
};
